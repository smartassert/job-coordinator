{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^4.0",
        "doctrine/orm": "^3.1",
        "guzzlehttp/guzzle": "^7.5",
        "smartassert/health-check-bundle": "8.2",
        "smartassert/results-client": "^10.0",
        "smartassert/service-client": "^8",
        "smartassert/service-request": "^1.5",
        "smartassert/sources-client": "^13.1",
        "smartassert/users-security-bundle": "^12.0",
        "smartassert/worker-client": "^5",
        "smartassert/worker-manager-client": "^11",
        "smartassert/worker-message-failed-event-bundle": "^4",
        "symfony/console": "8.0.*",
        "symfony/doctrine-messenger": "8.0.*",
        "symfony/dotenv": "8.0.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "8.0.*",
        "symfony/messenger": "8.0.*",
        "symfony/monolog-bundle": "^4",
        "symfony/runtime": "8.0.*",
        "symfony/security-bundle": "8.0.*",
        "symfony/uid": "8.0.*",
        "symfony/yaml": "8.0.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "dev-master#32c1c3f8fb65051f27a2d295e9c467b7ebe9de11",
        "mockery/mockery": "^1.5",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^13",
        "smartassert/symfony-test-client": "^3",
        "smartassert/test-authenticaton-provider-bundle": "^6",
        "smartassert/test-sources-client": "^0.5.0",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/maker-bundle": "^1.40",
        "symfony/phpunit-bridge": "8.0.*"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "XDEBUG_MODE=off ./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "db-setup": [
            "echo '[job-coordinator] db-setup'",
            "php bin/console doctrine:database:create --if-not-exists",
            "php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration --ansi",
            "echo ''"
        ],
        "static-analysis": "XDEBUG_MODE=off ./vendor/bin/phpstan analyse --ansi",
        "test-unit": "XDEBUG_MODE=off ./vendor/bin/phpunit --colors=always --display-deprecations --display-phpunit-deprecations tests/Unit",
        "test-functional": "XDEBUG_MODE=off ./vendor/bin/phpunit --colors=always --display-deprecations --display-phpunit-deprecations tests/Functional",
        "test-integration": "XDEBUG_MODE=off ./vendor/bin/phpunit --colors=always --display-deprecations --display-phpunit-deprecations tests/Integration",
        "test": [
            "@test-unit",
            "@test-functional"
        ],
        "functional-start": [
            "echo '[docker-compose] starting services'",
            "docker compose -f ./tests/build/docker-compose.yml up -d postgres users-service users-http",
            "echo ''"
        ],
        "functional-status": "docker compose -f ./tests/build/docker-compose.yml ps",
        "functional-teardown": [
            "docker compose -f ./tests/build/docker-compose.yml down"
        ],
        "functional-setup": [
            "@functional-start",
            "sleep 2",
            "@db-setup",
            "@messenger-setup",
            "@users-setup",
            "echo ''"
        ],
        "users-db-setup": [
            "echo '[users] db-setup'",
            "docker compose -f tests/build/docker-compose.yml exec -T users-service php bin/console doctrine:database:create --if-not-exists --ansi",
            "docker compose -f tests/build/docker-compose.yml exec -T users-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration --ansi",
            "echo ''"
        ],
        "users-generate-jwt-keys": [
            "echo '[users] generate-jwt-keys'",
            "docker compose -f tests/build/docker-compose.yml exec -T users-service php bin/console lexik:jwt:generate-keypair --overwrite --no-interaction",
            "echo ''"
        ],
        "users-create-user": [
            "echo '[users] create-user'",
            "curl --header 'Authorization: primary_admin_token' --data 'identifier=user1@example.com&password=password' http://localhost:9080/create",
            "curl --header 'Authorization: primary_admin_token' --data 'identifier=user2@example.com&password=password' http://localhost:9080/create",
            "echo ''"
        ],
        "users-setup": [
            "@users-db-setup",
            "@users-generate-jwt-keys",
            "@users-create-user"
        ],
        "results-setup": [
            "echo '[results] setup'",
            "docker compose -f tests/build/docker-compose.yml exec -T results-service php bin/console doctrine:database:create --if-not-exists --ansi",
            "docker compose -f tests/build/docker-compose.yml exec -T results-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration --ansi",
            "echo ''"
        ],
        "worker-manager-setup": [
            "echo '[worker-manager] setup'",
            "docker compose -f ./tests/build/docker-compose.yml exec -T worker-manager-service php bin/console doctrine:database:create --if-not-exists",
            "docker compose -f ./tests/build/docker-compose.yml exec -T worker-manager-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration --ansi",
            "echo ''"
        ],
        "sources-setup": [
            "echo '[sources] setup'",
            "docker compose -f ./tests/build/docker-compose.yml exec -T sources-service php bin/console doctrine:database:create --if-not-exists",
            "docker compose -f ./tests/build/docker-compose.yml exec -T sources-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration --ansi",
            "echo ''"
        ],
        "integration-build": "docker compose -f tests/build/docker-compose.yml build app",
        "integration-pull": "docker compose -f tests/build/docker-compose.yml pull",
        "integration-up": [
            "echo '[docker-compose] starting services'",
            "docker compose -f ./tests/build/docker-compose.yml up -d",
            "echo ''"
        ],
        "integration-setup": [
            "@integration-build",
            "@integration-up",
            "sleep 5",
            "@db-setup",
            "@messenger-setup",
            "@users-setup",
            "@results-setup",
            "@worker-manager-setup",
            "@sources-setup",
            "echo ''"
        ],
        "integration-status": "docker compose -f ./tests/build/docker-compose.yml ps",
        "integration-logs": "docker compose -f tests/build/docker-compose.yml logs",
        "integration-teardown": "docker compose -f ./tests/build/docker-compose.yml down",
        "messenger-setup": [
            "echo '[job-coordinator] messanger-setup'",
            "php bin/console messenger:setup-transports",
            "echo ''"
        ],
        "messenger-listen": "php bin/console messenger:consume async -vv"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "8.0.*"
        }
    }
}
